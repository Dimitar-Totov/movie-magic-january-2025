{{#if isSearch}}
<section id="search">
    <h1>Search</h1>
    <form  method="GET" class="form">
        <input type="text" value="{{filter.search}}" class="search" name="search" placeholder="Title...">
        <input type="text" value="{{filter.genre}}" name="genre" class="genre" placeholder="Genre...">
        <input type="number" value="{{filter.year}}" name="year" class="year" placeholder="Year...">
        <input type="submit" value="search">
    </form>
</section>
{{/if}}
<section id="catalog">
    <h1>All Movies</h1>
    <div class="band">

        <!-- If there are posts for creature in the database display each of them -->
        {{#each movies}}
            {{>movie}}
        {{else}}
        <!-- If there are still no posts in the database display: -->
        <div class="no-posts">
            <p class="no-offer">There are no posts yet...</p>
        </div>
        {{/each}}

    </div>
</section>